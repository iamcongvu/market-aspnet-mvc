
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header {
    Quản lý sản phẩm
}

<div class="form-group" style="margin-left: 12px">
    <button type="button" class="btn btn-success" onclick="GetDataForDialog(0)">
        <i class="fa fa-plus" aria-hidden="false"></i>
        Thêm mới
    </button>
</div>

<div class="form-group pull-right" id="Filter">
    <div class="row">
        <div class="col-md-5">
            <div class="col-md-12">
                <input type="text" class="form-control" id="NameFilter" placeholder="Tên sản phẩm">
            </div>
        </div>
        <div class="col-md-5">
            <div class="col-md-12">
                <input type="text" class="form-control" id="PriceFilter" placeholder="Đơn giá">
            </div>
        </div>
        <div class="col-md-2">
            <button type="button" class="btn btn-primary" id="btn-Filter">Tim kiếm</button>
        </div>
    </div>
    <div class="row" style="margin-top: 2em">
        <div class="col-md-5">
            <div class="col-md-12">
                <input type="text" class="form-control" id="DescriptionFilter" placeholder="Mô tả">
            </div>
        </div>
        <div class="col-md-5">
            <div class="col-md-12">
                <input type="text" class="form-control" id="PromotionPriceFilter" placeholder="Mức giảm giá">
            </div>
        </div>
    </div>
</div>

<table class="table table-bordered table-hover">
    <thead id="thead">
        <tr>
            <td>STT</td>
            <td>Thao Tác</td>
            <td class="sort" data-sort="Name">Tên sản phẩm</td>
            <td class="sort" data-sort="Price">Đơn giá</td>
            <td class="sort" data-sort="PromotionPrice">Giảm giá</td>
            <td class="sort" data-sort="CreateDate">Ngày tạo</td>
            <td class="sort" data-sort="Quantity">Số lượng</td>
            <td class="sort" data-sort="Image">Hình ảnh</td>

        </tr>
    </thead>
    <tbody id="tbody">
    </tbody>

</table>
<nav aria-label="Page navigation example">
    <ul class="pagination" style="margin:0;"></ul>
</nav>

<div class="modal" id="dialog_product">
    <div class="modal-dialog mw-100 w-75">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Sản phẩm mới</h4>
            </div>

            <!-- Modal body -->
            <form id="formfrm">
                <div class="modal-body">
                    <input id="ID" name="ID" hidden />

                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Tên sản phẩm</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="Name" name="Name">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Code</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="Code" name="Code">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>MetaTitle</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="MetaTitle" name="MetaTitle">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Mô tả</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="Description" name="Description">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Hình ảnh</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="Image" name="Image">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Đơn giá</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="Price" name="Price">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Giảm giá</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="PromotionPrice" name="PromotionPrice">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Thuế VAT</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="IncludeVAT" name="IncludeVAT">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4" pull-right>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Số lượng</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="Quantity" name="Quantity">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Mã danh mục</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="CategoryID" name="CategoryID">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Chi tiết</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="Detail" name="Detail">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Bảo hành</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="Warranty" name="Warranty">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Tên nhà cung cấp</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <select class="form-control" id="MaNCC">
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Tên nhà sản xuất</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <select class="form-control" id="MaNSX">
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Tên loại sản phẩm</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <select class="form-control" id="MaLoaiSP">
                                        </select>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="col-lg-4" pull-right>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Ngày tạo</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="date" class="form-control" id="CreateDate" name="CreateDate" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Tạo bởi</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="CreateBy" name="CreateBy" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Ngày sửa</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="date" class="form-control" id="ModifiedDate" name="ModifiedDate" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Sửa bởi</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="ModifiedBy" name="ModifiedBy">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Meta Keywords</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="MetaKeywords" name="MetaKeywords">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Meta Descriptions</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="MetaDescriptions" name="MetaDescriptions">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Trạng thái</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="Status" name="Status">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Sản phẩm nổi bật</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="TopHot" name="TopHot">
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </form>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="SaveRecord">Ghi</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Libraryjs/Library.js"></script>
    <script src="~/Areas/Admin/ControllerJs/SanPhamjs/SanPham.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
}





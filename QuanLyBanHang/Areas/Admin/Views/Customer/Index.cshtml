
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header {
    Thông tin khách hàng
}

<div class="form-group" style="margin-left: 12px">
    <button type="button" class="btn btn-success" onclick="GetDataForDialog(0)">
        <i class="fa fa-plus" aria-hidden="false"></i>
        Thêm mới
    </button>
</div>
<div class="form-group pull-right" id="Filter">
    <div class="row">
        <div class="col-md-5">
            <div class="col-md-12">
                <input type="text" class="form-control" id="TenHKFilter" placeholder="Tên khách hàng">
            </div>
        </div>
        <div class="col-md-5">
            <div class="col-md-12">
                <input type="text" class="form-control" id="DiaChiFilter" placeholder="Địa chỉ">
            </div>
        </div>
        <div class="col-md-2">
            <button type="button" class="btn btn-primary" id="btn-Filter">Tim kiếm</button>
        </div>
    </div>
    <div class="row" style="margin-top: 2em">
        <div class="col-md-5">
            <div class="col-md-12">
                <input type="text" class="form-control" id="EmailFilter" placeholder="Email">
            </div>
        </div>
        <div class="col-md-5">
            <div class="col-md-12">
                <input type="text" class="form-control" id="SDTFilter" placeholder="Số điện thoại">
            </div>
        </div>
    </div>
</div>

<table class="table table-bordered table-hover">
    <thead id="thead">
        <tr>
            <td class="sort">STT</td>
            <td class="sort">Thao Tác</td>
            <td class="sort">Tên khách hàng</td>
            <td class="sort">Địa chỉ</td>
            <td class="sort">Email</td>
            <td class="sort">Số điện thoại</td>
            <td class="sort">Loại thành viên</td>
        </tr>
    </thead>
    <tbody id="tbody">
    </tbody>

</table>
<nav aria-label="Page navigation example">
    <ul class="pagination" style="margin:0;"></ul>
</nav>

<div class="modal" id="dialog_kh">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Khách hàng mới</h4>
            </div>

            <!-- Modal body -->
            <form id="formfrm">
                <div class="modal-body">
                    <input id="MaKH" name="MaKH" hidden />

                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-4">
                                <label>Tên khách hàng:</label>
                            </div>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" id="TenKH" name="TenKH">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-4">
                                <label>Địa chỉ:</label>
                            </div>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" id="DiaChi" name="DiaChi">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-4">
                                <label>Email:</label>
                            </div>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" id="Email" name="Email">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-4">
                                <label>Số điện thoại:</label>
                            </div>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" id="SoDienThoai" name="SoDienThoai">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-4">
                                <label>Loại thành viên</label>
                            </div>
                            <div class="col-lg-8">
                                <select class="form-control" id="MaThanhVien">
                                </select>
                            </div>
                        </div>
                    </div>

                </div>
            </form>
            @*form tạm như này nhé em tùy chỉnh lại cho đẹp*@
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="SaveRecord">Ghi</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Libraryjs/Library.js"></script>
    <script src="~/Areas/Admin/ControllerJs/KhachHangjs/KhachHang.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
}




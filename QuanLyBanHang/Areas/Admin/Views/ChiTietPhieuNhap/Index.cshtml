
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header {
    Chi tiết phiếu nhập    
}

<div class="form-group" style="margin-left: 12px">
    <button type="button" class="btn btn-success" onclick="GetDataForDialog(0)">
        <i class="fa fa-plus" aria-hidden="false"></i>
        Thêm mới
    </button>
</div>
<div class="form-group" id="Filter">
    <div class="row">
        <div class="col-md-5">
            <div class="col-md-12">
                <input type="text" class="form-control" id="TenSPFilter" placeholder="Tên sản phẩm">
            </div>
        </div>
        <div class="col-md-2">
            <button type="button" class="btn btn-primary" id="btn-Filter">Tim kiếm</button>
        </div>
    </div>
    <div class="row" style="margin-top: 2em">
        <div class="col-md-5">
            <div class="col-md-12">
                <input type="text" class="form-control" id="TenNCCFilter" placeholder="Tên nhà cung cấp">
            </div>
        </div>
    </div>
</div>
<table class="table table-bordered table-hover">
    <thead id="thead">
        <tr>
            <td class="sort" >STT</td>
            <td class="sort" >Thao Tác</td>
            <td class="sort" data-sort="TenSP">Tên sản phẩm</td>
            <td class="sort" data-sort="TenNCC">Tên nhà cung cấp</td>
            <td class="sort" data-sort="DonGiaNhap">Đơn giá</td>
            <td class="sort" data-sort="SoLuongNhap">Số lượng</td>
        </tr>
    </thead>
    <tbody id="tbody">
    </tbody>

</table>
<nav aria-label="Page navigation example">
    <ul class="pagination" style="margin:0;"></ul>
</nav>

<div class="modal" id="dialog_ctpn">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Chi tiết phiếu nhập mới</h4>
            </div>

            <!-- Modal body -->
            <form id="formfrm">
                <div class="modal-body">
                    <input id="MaChiTietPN" name="MaChiTietPN" hidden/>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-4">
                                <label>Tên sản phẩm</label>
                            </div>
                            <div class="col-lg-8">
                                <select class="form-control" id="ID">
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-4">
                                <label>Tên nhà cung cấp</label>
                            </div>
                            <div class="col-lg-8">
                                <select class="form-control" id="MaPN">
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-4">
                                <label>Đơn giá</label>
                            </div>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" id="DonGiaNhap" name="DonGiaNhap">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-4">
                                <label>Số lượng</label>
                            </div>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" id="SoLuongNhap" name="SoLuongNhap">
                            </div>
                        </div>
                    </div>

                </div>
            </form>
            @*form tạm như này nhé em tùy chỉnh lại cho đẹp*@
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="SaveRecord">Ghi</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Libraryjs/Library.js"></script>
    <script src="~/Areas/Admin/ControllerJs/ChiTietPhieuNhapjs/ChiTietPhieuNhap.js"></script>
}



